{% extends 'EIPHRBundle::/Admin/layout.html.twig' %}
{% block content %}

<h3>Messages</h3>

<a class='btn' href="{{ path('hr_adm_add_message') }}">create message</a>

<table class='table table-striped table-bordered'>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Content</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
{% for message in messages %}
<tr>
    <td>{{ message.id }}</td>
    <td>{{ message.title }}</td>
    <td>{{ message.sender.username }}</td>
    <td>{{ message.receiver.username }}</td>
    <td>{{ message.content }}</td>
    <td><a href="{{ path('hr_adm_edit_message', { id: message.id }) }}">edit</a></td>
    <td><a href="{{ path('hr_adm_delete_message', { id: message.id }) }}">delete</a></td>
</tr>
{% endfor %}
    </tbody>
</table>

{% endblock %}