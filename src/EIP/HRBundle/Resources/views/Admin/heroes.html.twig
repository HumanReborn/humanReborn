{% extends 'EIPHRBundle::/Admin/layout.html.twig' %}
{% block content  %}

<a class='btn' href="{{ path('hr_adm_add_hero') }}">create hero schema</a>
<table class='table table-striped table-bordered'>
    <thead>
        <tr>
            <th>id</th>
            <th>name</th>
        </tr>
    </thead>
    <tbody>
    {% for hero in heroes %}
        <tr>
            <td>{{ hero.id }}</td>
            <td><a href="{{ path('hr_adm_edit_hero', { 'id':hero.id }) }}">{{ hero.name }}</a></td>
        </tr>
    {% else %}
        <tr><td colspan="2">No entry</td></tr>
    {% endfor %}
    </tbody>
</table>


{% endblock %}