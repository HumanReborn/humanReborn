{% extends 'EIPHRBundle::/Admin/layout.html.twig' %}
{% block content %}

<h3>units</h3>

<a class='btn' href="{{ path('hr_adm_add_unit') }}">create unit</a>

<table class='table table-striped table-bordered'>
    <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>b req</th>
            <th>t req</th>
            <th>buildTime</th>
            <th>waterCost</th>
            <th>pureWaterCost</th>
            <th>steelCost</th>
            <th>fuelCost</th>
            <th>hp</th>
            <th>attack</th>
            <th>armor</th>
            <th>type</th>
            <th>speed</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
{% for schema in units %}
            <tr>
                <td>{{ schema.id }}</td>
                <td>{{ schema.name }}</td>
                <td>{{ schema.buildingTime }}</td>
                <td>{{ schema.buildingRequirement }}</td>
                <td>{{ schema.technologyRequirement }}</td>
                <td>{{ schema.waterCost }}</td>
                <td>{{ schema.pureWaterCost }}</td>
                <td>{{ schema.steelCost }}</td>
                <td>{{ schema.fuelCost }}</td>
                <td>{{ schema.hp }}</td>
                <td>{{ schema.attack }}</td>
                <td>{{ schema.armor }}</td>
                <td>{{ schema.type }}</td>
                <td>{{ schema.speed }}</td>
                <td><a href="{{ path('hr_adm_edit_unit', { 'schemaid':schema.id }) }}">edit</a></td>
                <td><a href="javascript:void(0)" attr-path="{{ path('hr_adm_delete_unit', { 'schemaid': schema.id }) }}" onclick="confirmDelete(this)">delete</a></td>
            </tr>
{% endfor %}
    </tbody>
</table>
{% endblock %}