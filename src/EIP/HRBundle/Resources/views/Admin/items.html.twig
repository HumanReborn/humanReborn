{% extends 'EIPHRBundle::/Admin/layout.html.twig' %}
{% block content %}

<h3>Items</h3>
<div>
    <a class='btn' href='{{path('hr_adm_add_item')}}'>add item schema</a>
</div>
<div>
    <table class='table table-striped table-bordered'>
        <thead>
            <tr>
                <th>id</th>
                <th>name</th>
                <th>-</th>
                <th>-</th>
            </tr>
        </thead>
        <tbody>
    {% for schema in schemas %}
            <tr>
                <td>{{ schema.id }}</td>
                <td>{{ schema.name }}</td>
                <td><a href='{{path('hr_adm_edit_item', {schemaid: schema.id})}}'>edit</a></td>
                <td><a href='{{path('hr_adm_delete_item', {schemaid: schema.id})}}'>delete</a></td>
            </tr>
    {% endfor %}
            </tbody>
    </table>
</div>

{% endblock %}