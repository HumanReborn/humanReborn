{% extends 'EIPHRBundle::/Admin/layout.html.twig' %}
{% block content %}

<div>
    <a href='{{path('hr_adm_add_quest')}}'>Add quest schema</a>
    <table class='table table-bordered table-striped'>
        <thead>
            <tr>
                <th>id</th>
                <th>name</th>
                <th>type</th>
                <th>xpR</th>
                <th>itemsR</th>
                <th>-</th>
                <th>-</th>
                <th>-</th>
            </tr>
        </thead>
        <tbody>
            {% for schema in schemas %}
            <tr>
                <td>{{schema.id}}</td>
                <td>{{schema.name|trans({}, 'quests')}}</td>
                <td>{{schema.type}}</td>
                <td>{{schema.xpReward}}</td>
                <td>
                    {{schema.itemReward.count}} :
                    {% for s in schema.itemReward %}
                        {% if not loop.first %},{% endif %}
                        {{ s.name|trans({}, 'items') }}
                    {% endfor %}
                </td>
                <td style='width:100px;text-align:center;'><a class='btn btn-info btn-small' href='{{path('hr_adm_edit_quest_data',{schemaid: schema.id})}}'>Data</a></td>
                <td style='width:100px;text-align:center;'><a class='btn btn-info btn-small' href='{{path('hr_adm_edit_quest',{schemaid: schema.id})}}'>Edit</a></td>
                <td style='width:100px;text-align:center;'><a class='btn btn-danger btn-small' href='{{path('hr_adm_delete_quest', {schemaid:schema.id})}}'>Delete</a></td>
            </tr>
            {% else %}
            <tr><td>Empty</td></tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}