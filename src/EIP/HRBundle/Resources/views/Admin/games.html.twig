{% extends 'EIPHRBundle::/Admin/layout.html.twig' %}
{% block content %}
<h2>Games administration</h2>
<a class='btn' href='{{path('hr_adm_add_game')}}'>add new game</a>
<div id="gameList">
    <table class='table table-striped table-bordered'>
        <thead>
            <tr>
                <th>id</th>
                <th>name</th>
                <th>createdOn</th>
                <th>status</th>
            </tr>
        </thead>
        <tbody>
        {% for e in games %}
        <tr>
            <td>{{ e.id }}</td>
            <td>{{ e.name }}</td>
            <td>{{ e.createdOn|date('Y-m-d') }}</td>
            <td class='pointer'>{{ e.status == 0 ? '<span style="color:#800;">closed</span>' : '<span style="color:#080">opened</span>' }}</td>
            <td><a href="{{ path('hr_adm_game_edit',  { 'id' : e.id })  }}">Edit</a></td>
            <td><a href="#">TODO: players</a></td>
        </tr>
        {%  endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

